---
import Astrojs from './icons/Astrojs.astro'
import CSS from './icons/CSS.astro'
import Laravel from './icons/Laravel.astro'
import React from './icons/React.astro'
import Supabase from './icons/Supabase.astro'
import Tailwind from './icons/Tailwind.astro'
import Typescript from './icons/Typescript.astro'
import Vue from './icons/Vue.astro'
---

<section id="projects">
	<h2>Personal Projects</h2>
	<div class="projects">
		<div class="project">
			<picture>
				<source srcset="/kann-dark.webp" media="(prefers-color-scheme: dark)" />
				<img src="/kann-light.webp" alt="Kann" />
			</picture>
			<div class="info">
				<h3>Kann</h3>
				<p>
					A project manager with kanban boards, it supports team and user
					management, create projects and invite users to teams to manage tasks.
				</p>
				<div>
					<Laravel className="tech" />
					<Vue className="tech" />
					<Tailwind className="tech" />
				</div>
				<div class="actions">
					<a
						class="button live"
						href="https://kann.josuemartell.dev/"
						target="_blank">
						Live preview
					</a>
					<a
						class="button github"
						href="https://github.com/josushu0/kann"
						target="_blank">
						Github Repo
					</a>
				</div>
			</div>
		</div>
		<div class="projects">
			<div class="project">
				<picture>
					<source
						srcset="/hla-dark.webp"
						media="(prefers-color-scheme: dark)"
					/>
					<img src="/hla-light.webp" alt="Higher Lower Anime" />
				</picture>
				<div class="info">
					<h3>Higher Lower Anime</h3>
					<p>
						A game of higher or lower I made for me and my friends to play, it
						is based on The Higher Lower Game with anime rankings from Anilist.
					</p>
					<div>
						<Vue className="tech" />
						<Tailwind className="tech" />
					</div>
					<div class="actions">
						<a
							class="button live"
							href="https://hla.josuemartell.dev/"
							target="_blank">
							Live preview
						</a>
						<a
							class="button github"
							href="https://github.com/josushu0/higher-lower-anime"
							target="_blank">
							Github Repo
						</a>
					</div>
				</div>
			</div>
			<div class="project">
				<picture>
					<source
						srcset="/image-dark.webp"
						media="(prefers-color-scheme: dark)"
					/>
					<img src="/image-light.webp" alt="Image editor" />
				</picture>
				<div class="info">
					<h3>Image editor</h3>
					<p>
						A simple image editor I made as part of my onboarding in Neoaddition
						as a proof of knowlegde to use React.
					</p>
					<div>
						<React className="tech" />
						<Tailwind className="tech" />
					</div>
					<div class="actions">
						<a
							class="button live"
							href="https://image-editor-unsplashed.vercel.app/"
							target="_blank">
							Live preview
						</a>
						<a
							class="button github"
							href="https://github.com/josushu0/image-editor"
							target="_blank">
							Github Repo
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	section {
		max-width: 1280px;
		margin-inline: auto;
		padding-block-start: 100px;
		padding-block-end: 50px;
	}

	h2 {
		text-align: center;
		color: var(--color-secondary);
	}

	.project {
		display: flex;
		margin-block-start: 3rem;
		justify-content: space-between;
	}

	picture {
		max-width: 50%;
	}

	.info {
		flex-basis: 40%;
		min-width: 40%;
	}

	img {
		width: 100%;
		border: 4px solid var(--color-text);
		border-radius: 14px;
	}

	:global(.tech) {
		width: 40px;
		margin-inline-end: 0.5rem;
	}

	.actions {
		margin-block-start: 2rem;
		display: flex;
		gap: 1rem;
	}

	.button {
		padding-inline: 1.5rem;
		padding-block: 0.5rem;
		border-radius: 3px;
		text-decoration: none;
	}

	.live {
		background-color: var(--color-tertiary);
		color: var(--color-text-dark);
		transition: all 200ms ease-in-out;
	}

	@media (prefers-reduced-motion: no-preference) {
		.live:hover {
			opacity: 0.9;
		}
	}

	.github {
		outline-style: solid;
		outline-color: var(--color-text);
		outline-width: 2px;
		outline-offset: -2px;
		color: var(--color-text);
		transition: all 200ms ease-in-out;
	}

	.github:focus {
		outline-color: var(--color-tertiary);
	}

	@media (prefers-reduced-motion: no-preference) {
		.github:hover {
			background-color: var(--color-text);
			color: var(--color-text-dark);
		}
	}

	@media (prefers-color-scheme: dark) {
		.github {
			outline-color: var(--color-text-dark);
			color: var(--color-text-dark);
		}

		@media (prefers-reduced-motion: no-preference) {
			.github:hover {
				background-color: var(--color-text-dark);
				color: var(--color-text);
			}
		}
	}

	@media (max-width: 768px) {
		section {
			padding-block-end: 0px;
		}
	}

	@media (max-width: 1024px) {
		.project {
			flex-direction: column;
		}

		picture {
			max-width: 100%;
		}
	}

	@media (max-width: 1344px) {
		section {
			margin-inline: 2rem;
		}
	}
</style>
