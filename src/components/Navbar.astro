<style>
	header {
		height: 60px;
		background-color: var(--color-bg-surface);
		filter: drop-shadow(0 1px 2px rgb(0 0 0 / 0.1))
			drop-shadow(0 1px 1px rgb(0 0 0 / 0.06));
		position: fixed;
		width: 100vw;
		z-index: 999;
	}

	nav {
		max-width: 1280px;
		height: inherit;
		margin-inline: auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.brand {
		height: 30px;
	}

	.brand a {
		display: block;
	}

	.links {
		display: flex;
		gap: 1rem;
		margin-inline-start: 60px;
	}

	.mobile-links {
		display: none;
		height: 32px;
		height: 32px;
	}

	.socials {
		height: 24px;
		display: flex;
		gap: 0.5rem;
	}

	.socials a {
		display: block;
	}

	.social {
		fill: var(--color-text);
	}

	.social:hover {
		fill: var(--color-tertiary);
	}

	a {
		text-decoration: none;
		color: var(--color-text);
	}

	a:hover {
		color: var(--color-tertiary);
	}

	@media (prefers-color-scheme: dark) {
		header {
			background-color: var(--color-bg-dark-surface);
		}

		a {
			color: var(--color-text-dark);
		}

		.social {
			fill: var(--color-text-dark);
		}
	}

	@media (max-width: 640px) {
		.links {
			display: none;
		}

		.mobile-links {
			display: block;
		}
	}

	@media (max-width: 1296px) {
		nav {
			padding-inline: 1rem;
		}
	}
</style>
