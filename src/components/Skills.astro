---
import Astrojs from './icons/Astrojs.astro';
import CSS from './icons/CSS.astro';
import HTML from './icons/HTML.astro';
import Javascript from './icons/Javascript.astro';
import React from './icons/React.astro';
import Supabase from './icons/Supabase.astro';
import Tailwind from './icons/Tailwind.astro';
import Typescript from './icons/Typescript.astro';
import Vue from './icons/Vue.astro';
---

<section>
	<h2>Languages and Technologies</h2>
	<div class="skills">
		<a
			href="https://developer.mozilla.org/en-US/docs/Web/HTML"
			target="_blank"
			aria-label="Learn more about HTML">
			<HTML className="skill" />
		</a>
		<a
			href="https://developer.mozilla.org/en-US/docs/Web/CSS"
			target="_blank"
			aria-label="Learn more about CSS">
			<CSS className="skill" />
		</a>
		<a
			href="https://developer.mozilla.org/en-US/docs/Web/JavaScript"
			target="_blank"
			aria-label="Learn more about Javascript">
			<Javascript className="skill" />
		</a>
		<a
			href="https://www.typescriptlang.org/"
			target="_blank"
			aria-label="Learn more about Typescript">
			<Typescript className="skill" />
		</a>
		<a
			href="https://vuejs.org/"
			target="_blank"
			aria-label="Learn more about Vue">
			<Vue className="skill" />
		</a>
		<a
			href="https://reactjs.org/"
			target="_blank"
			aria-label="Learn more about React">
			<React className="skill" />
		</a>
		<a
			href="https://astro.build"
			target="_blank"
			aria-label="Learn more about Astro">
			<Astrojs className="skill" />
		</a>
		<a
			href="https://tailwindcss.com/"
			target="_blank"
			aria-label="Learn more about Tailwind">
			<Tailwind className="skill" />
		</a>
		<a
			href="https://supabase.com/"
			target="_blank"
			aria-label="Learn more about Supabase">
			<Supabase className="skill" />
		</a>
	</div>
</section>

<style>
	section {
		max-width: 1280px;
		padding-block-start: 100px;
		padding-block-end: 50px;
		margin-inline: auto;
	}

	h2 {
		text-align: center;
		color: var(--color-tertiary);
	}

	.skills {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-wrap: wrap;
		gap: 2rem;
		max-width: 640px;
		margin-inline: auto;
		margin-block-start: 3rem;
	}

	.skill {
		width: 70px;
		transition: transform 0.3s;
	}

	@media (prefers-reduced-motion: no-preference) {
		.skill:hover {
			transform: scale(120%);
		}
	}

	@media (max-width: 640px) {
		section {
			margin-inline: 2rem;
		}

		.skill {
			width: 50px;
		}
	}
</style>
