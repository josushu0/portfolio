---
export interface Props {
	title: string
	description: string
}

const { title, description } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/portfolio/favicon.svg" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<style>
			@import url('https://fonts.googleapis.com/css2?family=Poppins&family=Sintony:wght@400;700&display=swap');

			:root {
				--font-size-base: clamp(1rem, 1.1vw + 0.5rem, 1.2rem);
				--font-size-lg: clamp(2rem, 3.7vw + 0.2rem, 2.5rem);
				--font-size-xl: clamp(2.5rem, 8vw - 1rem, 4rem);

				--font-family-text: 'Poppins', system-ui, sans-serif;
				--font-family-titles: 'Sintony', system-ui, sans-serif;

				--color-text: hsl(248, 19%, 40%);
				--color-bg: hsl(32, 60%, 95%);
				--color-bg-surface: hsl(35, 100%, 98%);
				--color-text-dark: hsl(245, 50%, 91%);
				--color-bg-dark: hsl(249, 22%, 12%);
				--color-bg-dark-surface: hsl(247, 23%, 15%);

				--color-primary: hsl(35, 88%, 72%);
				--color-secondary: hsl(343, 76%, 68%);
				--color-tertiary: hsl(197, 49%, 38%);
				--brand-gradient: linear-gradient(
					0deg,
					var(--color-primary),
					var(--color-secondary)
				);
			}

			html {
				font-family: var(--font-family-text), system-ui, sans-serif;
				font-size: var(--font-size-base);
				color: var(--color-text);
				background-color: var(--color-bg);
			}

			body {
				margin: 0;
			}

			@media (prefers-color-scheme: dark) {
				html {
					color: var(--color-text-dark);
					background-color: var(--color-bg-dark);
				}
			}

			@media (prefers-reduced-motion: no-preference) {
				html {
					scroll-behavior: smooth;
				}
			}
		</style>

		<style is:global>
			h1 {
				font-size: var(--font-size-xl);
				font-family: var(--font-family-titles);
				font-weight: 700;
				margin: 0;
			}

			h2 {
				font-size: var(--font-size-lg);
				font-family: var(--font-family-titles);
				font-weight: 400;
				margin: 0;
			}
		</style>
	</body>
</html>
